---
apiVersion: v1
kind: Service
metadata:
  annotations:
    service.beta.openshift.io/serving-cert-secret-name: migration-ui-tls
  name: migration-ui
  namespace: "{{ virt_namespace }}"
  labels:
    app: migration
    service: migration-ui
spec:
  ports:
    - name: port-8443
      port: 8443
      targetPort: 8443
      protocol: TCP
  selector:
    app: migration
    service: migration-ui
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: virt-ui
  namespace: "{{ virt_namespace }}"
  labels:
    app: migration
    service: migration-ui
spec:
  selector:
     matchLabels:
       app: migration
       service: migration-ui
  template:
    metadata:
      labels:
        app: migration
        service: migration-ui
    spec:
      containers:
        - name: mig-ui
          image: "{{ virt_ui_image_fqin }}"
          imagePullPolicy: "{{ image_pull_policy }}"
          env:
            - name: META_FILE
              value: {{ ui_configmap_path }}/virtMeta.json
            - name: NODE_EXTRA_CA_CERTS
              value: /var/run/secrets/kubernetes.io/serviceaccount/service-ca.crt
          ports:
            - containerPort: 8443
              protocol: TCP
          volumeMounts:
            - name: "{{ ui_configmap_name }}"
              mountPath: "{{ ui_configmap_path }}"
            - name: migration-ui-tls
              mountPath: /var/run/secrets/migration-ui-tls
      volumes:
        - name: "{{ ui_configmap_name }}"
          configMap:
            name: "{{ ui_configmap_name }}"
        - name: migration-ui-tls
          secret:
            defaultMode: 420
            secretName: migration-ui-tls
