---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: inventory-payload
  namespace: "{{ virt_namespace }}"
  labels:
    app: migration
    service: inventory-payload
spec:
  selector:
     matchLabels:
       app: migration
       service: inventory-payload
  template:
    metadata:
      labels:
        app: migration
        service: inventory-payload
    spec:
      containers:
        - name: inventory-payload
          image: "{{ inventory_payload_image_fqin }}"
          imagePullPolicy: "{{ image_pull_policy }}"
          env:
            - name: API_TLS_CERTIFICATE
              value: /var/run/secrets/inventory-payload-tls/tls.crt
            - name: API_TLS_KEY
              value: /var/run/secrets/inventory-payload-tls/tls.key
          ports:
            - containerPort: 8443
              protocol: TCP
          volumeMounts:
            - name: inventory-payload-tls
              mountPath: /var/run/secrets/inventory-payload-tls
      volumes:
        - name: inventory-payload-tls
          secret:
            secretName: inventory-payload-tls
            defaultMode: 420
---
apiVersion: v1
kind: Service
metadata:
  name: inventory-payload
  namespace: "{{ virt_namespace }}"
  labels:
    app: migration
    service: inventory-payload
  annotations:
    service.beta.openshift.io/serving-cert-secret-name: inventory-payload-tls
spec:
  ports:
    - name: port-8443
      port: 8443
      targetPort: 8443
      protocol: TCP
  selector:
    app: migration
    service: inventory-payload
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  annotations:
    haproxy.router.openshift.io/timeout: 300s
  name: inventory-payload
  namespace: "{{ virt_namespace }}"
  labels:
    app: inventory-payload
    service: inventory-payload
spec:
  to:
    kind: Service
    name: inventory-payload
  port:
    targetPort: port-8443
  tls:
    termination: reencrypt
    insecureEdgeTerminationPolicy: Redirect
